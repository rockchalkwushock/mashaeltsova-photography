{
  "name": "mashaeltsova-photography",
  "version": "0.1.0",
  "license": "MIT",
  "author": "Cody Brunner <rockchalkwushock@icloud.com> (https://codybrunner.me)",
  "description": "Photography portfolio & business website for Masha Eltsova.",
  "repository": "https://github.com/rockchalkwushock/mashaeltsova-photography.git",
  "scripts": {
    "build": "nps clean && SITE_DOMAIN=http://localhost:9000 gatsby build --prefix-paths",
    "ci_build": "gatsby build --prefix-paths",
    "cm": "nps commit",
    "dev": "nps clean && SITE_DOMAIN=http://localhost:8000 gatsby develop",
    "serve": "gatsby serve",
    "start": "nps",
    "test": "nps test"
  },
  "dependencies": {
    "@fortawesome/fontawesome": "^1.1.4",
    "@fortawesome/fontawesome-free-brands": "^5.0.8",
    "@fortawesome/fontawesome-free-solid": "^5.0.8",
    "@fortawesome/react-fontawesome": "^0.0.17",
    "gatsby": "^1.9.238",
    "gatsby-image": "^1.0.42",
    "gatsby-link": "^1.6.39",
    "gatsby-plugin-react-next": "^1.0.11",
    "gatsby-plugin-sharp": "^1.6.41",
    "gatsby-plugin-styled-components": "^2.0.9",
    "gatsby-source-filesystem": "^1.5.27",
    "gatsby-transformer-sharp": "^1.6.22",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-router-dom": "^4.2.2",
    "styled-components": "^3.2.3"
  },
  "devDependencies": {
    "codecov": "^3.0.0",
    "commitizen": "^2.9.6",
    "cz-conventional-changelog": "^2.1.0",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "enzyme-to-json": "^3.3.3",
    "eslint": "^4.19.0",
    "eslint-config-equimper": "^2.2.2",
    "eslint-config-prettier": "^2.9.0",
    "husky": "^0.15.0-rc.12",
    "jest": "^22.4.2",
    "jest-styled-components": "^5.0.0",
    "lint-staged": "^7.0.0",
    "nps": "^5.8.2",
    "nps-utils": "^1.5.0",
    "prettier": "^1.11.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "jest": true,
      "node": true
    },
    "extends": [
      "equimper",
      "prettier"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --single-quote --no-semi --write",
      "git add"
    ]
  },
  "jest": {
    "bail": true,
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 50,
        "functions": 50,
        "lines": 50,
        "statements": 50
      }
    },
    "coveragePathIgnorePatterns": [
      "/src/components/index.js",
      "/src/components/commons/index.js",
      "/src/helpers/index.js",
      "/src/layouts/",
      "/src/pages/",
      "/src/utils/"
    ],
    "setupFiles": [
      "./jest.setup.js"
    ],
    "setupTestFrameworkScriptFile": "jest-styled-components",
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "testEnvironment": "jsdom",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/.cache/"
    ],
    "transform": {
      "^.+\\.js$": "<rootDir>/jest.transform.js"
    }
  }
}
